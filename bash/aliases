
alias la='ls -a'
alias ll='ls -l'
alias lf='ls -F'
alias ..='cd ..'
alias reload='source ~/.bashrc'

# change to project directory
function c { cd ~/Code/$1; }

# git
alias gs='git status'
alias ga='git add .'
alias gd='git ls-files --deleted | xargs git rm'
alias gc='git commit -a'
alias gl='git log'
alias gp='git push'

# show and hide hidden files in the Finder
alias showhiddenfiles='defaults write com.apple.finder AppleShowAllFiles TRUE; killall Finder'
alias hidehiddenfiles='defaults write com.apple.finder AppleShowAllFiles FALSE; killall Finder'

# enable/disable dashboard
alias disabledashboard='defaults write com.apple.dashboard mcx-disabled -boolean YES; killall Dock'
alias enabledashboard='defaults write com.apple.dashboard mcx-disabled -boolean NO; killall Dock'

# copy current directory's absolute path to clipboard
alias cpwd='echo -n `pwd` | pbcopy'

# open files with iA Writer
function writer { open -a "iA Writer" $1; }

# interactive JavaScript via Rhino http://www.mozilla.org/rhino/
function rhino { java org.mozilla.javascript.tools.shell.Main $1 $2; }

# create and open a file in textmate
function newfile { touch $1 && mate $1; }

# unpack tar file
function unpack { tar -xvzf $1; }

# list out tcp connections
function tcp { lsof -i tcp:$1; }

# find file and open in textmate
function goto { find . -name $1 | xargs mate; }
