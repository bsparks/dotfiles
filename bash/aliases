# basic shortcuts
alias la='ls -a'
alias ll='ls -l'
alias lf='ls -F'

# 256MB slice from slicehost
alias tenable='ssh -p 30000 jacob@tenabledesigns.com'

# show and hide hidden files in the Finder
alias show_hidden_files='defaults write com.apple.finder AppleShowAllFiles TRUE; killall Finder'
alias hide_hidden_files='defaults write com.apple.finder AppleShowAllFiles FALSE; killall Finder'

# open files in Firefox - used when building websites
function o() {
	open -a Firefox $1
}

# cd into cindy jo's website and open it in TextMate
alias cindyjo='cd /volumes/western\ digital\ hd/jacob/sites/spiritsbycindyjo; mate .'

# aliases for Git
alias gs='git status'
alias gl='git log'
alias gd='git ls-files --deleted | xargs git rm'