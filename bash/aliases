#
#	Basic Shortcuts
#
alias la='ls -a'
alias ll='ls -l'
alias lf='ls -F'
alias ..='cd ..'

#
#	Projects
#
alias cindyjo='cd /volumes/western\ digital\ hd/jacob/sites/spiritsbycindyjo; mate .'
alias abbadvisors='cd ~/sites/abbadvisors.com; mate .'
alias kathleeny='cd ~/sites/kathleeny.com; mate .'

# 
#	Git
#
alias gs='git status'
alias ga='git add .'
alias gd='git ls-files --deleted | xargs git rm'
alias gc='git commit -a'
alias gl='git log'
alias gp='git push'

#
#	Miscellaneous
#
# show and hide hidden files in the Finder
alias sf='defaults write com.apple.finder AppleShowAllFiles TRUE; killall Finder'
alias hf='defaults write com.apple.finder AppleShowAllFiles FALSE; killall Finder'

# open files in Firefox - used when building websites
function o() { 
	open -a Firefox $1
}

# look up a word at dictionary.com 'd [word]' => dictionary, 't [word]' => thesaurus
function d() { 
	open -a Safari http://dictionary.reference.com/browse/$1
}
function t() { 
	open -a Safari http://thesaurus.reference.com/browse/$1
}